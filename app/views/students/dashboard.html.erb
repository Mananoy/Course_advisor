<%= semantic_flash %>

<div class="six ui buttons">
  <button class="ui animated blue disabled button" tabindex="0" style="padding: 0">
    <%= link_to '/system/students' do %>
      <div class="visible content" style="margin: 0; padding: 10px">
        Dashboard
      </div>
      <div class="hidden content">
        <i class="clipboard outline icon"></i>
      </div>
    <% end %>
  </button>

  <button class="ui animated blue button" tabindex="0" style="padding: 0">
    <%= link_to '/system/students/enrolments' do %>
      <div class="visible content" style="margin: 0; padding: 10px">
        Enrolments
      </div>
      <div class="hidden content">
        <i class="clipboard outline icon"></i>
      </div>
    <% end %>
  </button>

  <button class="ui animated blue button" tabindex="0" style="padding: 0">
    <%= link_to '/system/students/request_advice' do %>
      <div class="visible content" style="margin: 0; padding: 10px">
        Request Advice
      </div>
      <div class="hidden content">
        <i class="users icon"></i>
      </div>
    <% end %>
  </button>

  <button class="ui animated blue button" tabindex="0" style="padding: 0">
    <%= link_to '/system/students/advice_history' do %>
      <div class="visible content" style="margin: 0; padding: 10px">
        Advice History
      </div>
      <div class="hidden content">
        <i class="clipboard list icon"></i>
      </div>
    <% end %>
  </button>

  <button class="ui vertical animated blue button" tabindex="0" style="padding: 0">
    <%= link_to '/system/students/help' do %>
      <div class="visible content" style="margin: 0; padding: 10px">
        Help
      </div>
      <div class="hidden content">
        <i class="question circle icon"></i>
      </div>
    <% end %>
  </button>

  <button class="ui animated fade red button" tabindex="0" style="padding: 0">
    <%= link_to '/system/logout' do %>
      <div class="visible content" style="margin: 0; padding: 10px">
        Logout
      </div>
      <div class="hidden content">
        <i class="sign-out icon"></i>
      </div>
    <% end %>
  </button>

</div>
<br/><br/><br/>

<div style="background-color: #DCE9F0; padding: 15px">

  <h2 class="ui header">Student Profile</h2>
  <br>

  <table class="ui definition selectable table">
    <colgroup>
      <col span="1" style="width: 30%;">
      <col span="1" style="width: 70%;">
    </colgroup>

    <tbody>
    <tr>
      <td>Student ID: </td>
      <td><%= current_user.account %></td>
    </tr>
    <tr>
      <td>Name: </td>
      <td><%= current_user.name %></td>
    </tr>
    <tr>
      <td>Residency: </td>
      <td><%= current_user.residency %></td>
    </tr>
    <tr>
      <td>Qualification: </td>
      <td><%= current_user.qualification %></td>
    </tr>
    <tr>
      <td>Program: </td>
      <td><%= current_user.program %></td>
    </tr>
    <tr>
      <td>Plan: </td>
      <td><%= current_user.plan %></td>
    </tr>
    <tr>
      <td>Year: </td>
      <td><%= current_user.year %></td>
    </tr>
    <tr>
      <td>Expected completion: </td>
      <td><%= current_user.expected_completion %></td>
    </tr>

    <%unless current_user.english_exam.nil? %>
    <tr>
      <td>English Exam </td>
      <td><%= current_user.english_exam %></td>
    </tr>
    <tr>
      <td>English Score: </td>
      <td><%= current_user.english_score %></td>
    </tr>
    <% end %>

    </tbody></table>

  <%= button_to "Edit Completion Year", system_students_edit_path, :method => "get" %>

</div>
<br>
