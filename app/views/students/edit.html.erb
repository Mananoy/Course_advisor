<%= semantic_flash %>

<div class="five ui buttons">
  <button class="ui animated blue disabled button" tabindex="0" style="padding: 0">
    <%= link_to '/system/students' do %>
      <div class="visible content" style="margin: 0; padding: 10px">
        Dashboard
      </div>
      <div class="hidden content">
        <i class="clipboard outline icon"></i>
      </div>
    <% end %>
  </button>

  <button class="ui animated blue button" tabindex="0" style="padding: 0">
    <%= link_to '/system/students/request_advice' do %>
      <div class="visible content" style="margin: 0; padding: 10px">
        Request Advice
      </div>
      <div class="hidden content">
        <i class="users icon"></i>
      </div>
    <% end %>
  </button>

  <button class="ui animated blue button" tabindex="0" style="padding: 0">
    <%= link_to '/system/students/advice_history' do %>
      <div class="visible content" style="margin: 0; padding: 10px">
        Advice History
      </div>
      <div class="hidden content">
        <i class="clipboard list icon"></i>
      </div>
    <% end %>
  </button>

  <button class="ui vertical animated blue button" tabindex="0" style="padding: 0">
    <%= link_to '/system/students/help' do %>
      <div class="visible content" style="margin: 0; padding: 10px">
        Help
      </div>
      <div class="hidden content">
        <i class="question circle icon"></i>
      </div>
    <% end %>
  </button>

  <button class="ui animated fade red button" tabindex="0" style="padding: 0">
    <%= link_to '/system/logout' do %>
      <div class="visible content" style="margin: 0; padding: 10px">
        Logout
      </div>
      <div class="hidden content">
        <i class="sign-out icon"></i>
      </div>
    <% end %>
  </button>

</div>
<br/><br/><br/>

<div style="background-color: #DCE9F0; padding: 15px">
  <h1 class="ui center aligned header">Enter your new expected completion, in the format "2021 Semester 1"</h1>
  <%= form_with model: @student, url: system_students_update_path, method: :patch, local: true, scope: @student do |f| %>
    <div>
    <%= f.label :expected_completion %>
    <%= f.text_field :expected_completion %>
    </div>
    <div>
    <%= f.submit "Confirm Change" %>
    </div>
    <% end %>

</div>
